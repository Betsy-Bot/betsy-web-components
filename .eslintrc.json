{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "project": "./tsconfig.json",
        "tsconfigRootDir": "."
    },
    "rules": {
        "no-unused-vars": 0,
        "@typescript-eslint/no-unused-vars": 0,
        "no-prototype-builtins": ["error"],
        "no-console": ["error"],
        "getter-return": ["error"],
        "no-multi-spaces": [
            "error"
        ],
        "object-curly-spacing": ["error", "always"]
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest": true
    }
}
