{
  "name": "betsybot-web-application",
  "description": "An application to manage the configuration for the discord bot Betsy Bot.",
  "version": "0.1.1",
  "license": "MIT",
  "scripts": {
    "build": "webpack --env production",
    "build:staging": "webpack --env staging",
    "start": "webpack-dev-server",
    "build:dev": "webpack",
    "analyze": "webpack --env production --analyze",
    "lintcheck": "eslint --rulesdir \".\" \"src/**/*.js\""
  },
  "dependencies": {
    "aurelia-bootstrapper": "^2.3.3",
    "aurelia-fetch-client": "^1.8.2",
    "aurelia-animator-css": "^1.0.4",
    "@aurelia-mdc-web/all": "^8.0.3",
    "@microsoft/signalr": "^6.0.3",
    "@popperjs/core": "^2.11.2",
    "bootstrap": "^5.1.3",
    "lets-toast": "^1.0.1",
    "moment": "^2.29.1",
    "sanitize-html": "^2.7.0",
    "showdown": "^2.0.2"
  },
  "devDependencies": {
    "eslint": "^8.7.0",
    "aurelia-cli": "^2.0.3",
    "aurelia-testing": "^1.0.0",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "minimatch": "^3.0.4",
    "promise-polyfill": "^8.2.1",
    "typescript": "^4.5.4",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "ts-loader": "^9.2.6",
    "@types/webpack": "^5.28.0",
    "html-webpack-plugin": "^5.5.0",
    "copy-webpack-plugin": "^10.2.0",
    "mini-css-extract-plugin": "^2.5.2",
    "aurelia-webpack-plugin": "^5.0.3",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3",
    "expose-loader": "^3.1.0",
    "style-loader": "^3.3.1",
    "css-loader": "^6.5.1",
    "app-settings-loader": "^2.0.0",
    "json-loader": "^0.5.7",
    "sass": "^1.45.1",
    "sass-loader": "^12.4.0",
    "html-loader": "^3.1.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "tree-kill": "^1.2.2",
    "jest": "^27.4.7",
    "jest-cli": "^27.4.7",
    "jest-transform-stub": "^2.0.0",
    "aurelia-loader-nodejs": "^1.1.0",
    "aurelia-pal-nodejs": "^2.0.0",
    "ts-jest": "^27.1.3",
    "@types/jest": "^27.4.0"
  },
  "engines": {
    "node": ">=10.12.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^aurelia-binding$": "<rootDir>/node_modules/aurelia-binding"
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.spec\\.(ts|js)$",
    "setupFiles": [
      "<rootDir>/test/jest-pretest.ts"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!**/*.spec.{js,ts}",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/test/coverage-jest",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
