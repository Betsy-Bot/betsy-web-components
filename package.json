{
  "name": "@besty/web-components",
  "description": "Betsy Web Components",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://dev.azure.com/betsy-bot/Betsy%20Bot%20Public/_git/Betsy%20Web%20Components"
  },
  "author": "Betsy Bot",
  "homepage": "./",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "browser": {
    "http": false
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint:js": "eslint src test --ext .js,.ts",
    "lint:html": "htmlhint -c .htmlhintrc src",
    "lint": "npm run lint:js && npm run lint:html",
    "clean": "npx -y rimraf node_modules package-lock.json && npm i",
    "dev": "webpack serve",
    "start": "webpack serve",
    "typecheck": "tsc",
    "build": "tsc && vite build",
    "build:dev": "vite build --mode development"
  },
  "dependencies": {
    "aurelia": "latest",
    "chart.js": "latest",
    "@aurelia/validation-html": "latest"
  },
  "devDependencies": {
    "@aurelia/testing": "latest",
    "@aurelia/ts-jest": "latest",
    "@aurelia/webpack-loader": "latest",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "autoprefixer": "^10.4.13",
    "css-loader": "^6.7.3",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.36.0",
    "html-webpack-plugin": "^5.5.0",
    "htmlhint": "^1.1.4",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-transform-stub": "^2.0.0",
    "postcss": "^8.4.20",
    "postcss-loader": "^7.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.59.3",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.2",
    "ts-loader": "^9.4.2",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "webpack": "^5.76.2",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.spec.ts"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "\\.(ts|html)$": [
        "@aurelia/ts-jest",
        {
          "defaultShadowOptions": {
            "mode": "open"
          }
        }
      ]
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  }
}