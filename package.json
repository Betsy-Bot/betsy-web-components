{
  "name": "@worm425/betsy-web-components",
  "description": "Betsy Material Web 3 Components",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Betsy-Bot/betsy-web-components"
  },
  "author": "Betsy Bot",
  "homepage": "./",
  "license": "MIT",
  "browser": {
    "http": false
  },
  "main": "dist/index.js",
  "files": [
    "src"
  ],
  "engineStrict": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=7.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.8.0",
  "scripts": {
    "build": "tsc && vite build",
    "build:dev": "vite build --mode development",
    "clean": "npx -y rimraf node_modules package-lock.json && npm i",
    "lint:js": "eslint src --ext .js,.ts",
    "lint:html": "htmlhint -c .htmlhintrc src",
    "lint": "npm run lint:js && npm run lint:html",
    "semantic-release": "npx -p @semantic-release/changelog -p @semantic-release/exec -p @semantic-release/git -p @semantic-release/github -p @semantic-release/npm -p @semantic-release/release-notes-generator semantic-release",
    "start": "vite",
    "typecheck": "tsc"
  },
  "dependencies": {
    "chart.js": "latest",
    "@aurelia/validation-html": "latest",
    "@darkguy10/discord-markdown": "^2.6.0",
    "@emoji-mart/data": "^1.1.2",
    "@material/banner": "^14.0.0",
    "@material/card": "^14.0.0",
    "@material/checkbox": "^14.0.0",
    "@material/chips": "^14.0.0",
    "@material/circular-progress": "^14.0.0",
    "@material/dialog": "^14.0.0",
    "@material/drawer": "^14.0.0",
    "@material/fab": "^14.0.0",
    "@material/form-field": "^14.0.0",
    "@material/icon-button": "^14.0.0",
    "@material/list": "^14.0.0",
    "@material/menu": "^14.0.0",
    "@material/radio": "^14.0.0",
    "@material/select": "^14.0.0",
    "@material/tab-bar": "^14.0.0",
    "@material/textfield": "^14.0.0",
    "@material/top-app-bar": "^14.0.0",
    "@material/web": "^1.0.1",
    "@microsoft/signalr": "^7.0.12",
    "aurelia": "2.0.0-beta.8",
    "aurelia-fetch-client": "^1.8.2",
    "bootstrap": "^5.3.2",
    "devextreme": "^23.1.5",
    "emoji-mart": "^5.5.2",
    "flatpickr": "^4.6.13",
    "ink-mde": "^0.29.1",
    "lets-toast": "^1.0.1",
    "material-icons": "^1.13.12"
  },
  "devDependencies": {
    "@aurelia/testing": "latest",
    "@aurelia/router-lite": "2.0.0-beta.8",
    "@aurelia/vite-plugin": "2.0.0-beta.8",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "autoprefixer": "^10.4.13",
    "css-loader": "^6.7.3",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.36.0",
    "html-webpack-plugin": "^5.5.0",
    "htmlhint": "^1.1.4",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-transform-stub": "^2.0.0",
    "postcss": "^8.4.20",
    "postcss-loader": "^7.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.59.3",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.2",
    "ts-loader": "^9.4.2",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "vite": "^4.5.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.spec.ts"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "\\.(ts|html)$": [
        "@aurelia/ts-jest",
        {
          "defaultShadowOptions": {
            "mode": "open"
          }
        }
      ]
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "release": {
      "branches": [
        "release",
        {
          "channel": "channel-${name}",
          "name": "next-major",
          "prerelease": true
        },
        {
          "channel": "channel-${name}",
          "name": "preview",
          "prerelease": true
        },
        "+([0-9])?(.{+([0-9]),x}).x"
      ],
      "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        [
          "@semantic-release/changelog",
          {
            "changelogTitle": "# Changelog"
          }
        ],
        "@semantic-release/npm",
        "@semantic-release/git",
        "@semantic-release/github"
      ],
      "preset": "angular"
    }
  }
}
