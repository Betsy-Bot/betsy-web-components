{
    "name": "betsy-admin-panel",
    "description": "An Aurelia 2 client application.",
    "version": "2.0.0",
    "repository": {
        "type": "git",
        "url": "???"
    },
    "license": "UNLICENSED",
    "scripts": {
        "build": "rimraf dist && vite build",
        "build:staging": "rimraf dist && vite build --mode staging",
        "lint": "pnpm run lint:js && pnpm run lint:html",
        "lint:html": "htmlhint -c .htmlhintrc src",
        "lint:js": "eslint src --ext .js,.ts",
        "preinstall": "npx only-allow pnpm",
        "start": "vite",
        "update-depenencies": "npx npm-check-updates -u",
        "update-services": "npx orval@latest"
    },
    "dependencies": {
        "@darkguy10/discord-markdown": "^2.6.0",
        "@emoji-mart/data": "^1.1.2",
        "@material/banner": "^14.0.0",
        "@material/card": "^14.0.0",
        "@material/checkbox": "^14.0.0",
        "@material/chips": "^14.0.0",
        "@material/circular-progress": "^14.0.0",
        "@material/dialog": "^14.0.0",
        "@material/drawer": "^14.0.0",
        "@material/fab": "^14.0.0",
        "@material/form-field": "^14.0.0",
        "@material/icon-button": "^14.0.0",
        "@material/list": "^14.0.0",
        "@material/menu": "^14.0.0",
        "@material/radio": "^14.0.0",
        "@material/select": "^14.0.0",
        "@material/switch": "^14.0.0",
        "@material/tab-bar": "^14.0.0",
        "@material/textfield": "^14.0.0",
        "@material/top-app-bar": "^14.0.0",
        "@microsoft/signalr": "^7.0.9",
        "aurelia": "2.0.0-beta.7",
        "aurelia-fetch-client": "^1.8.2",
        "bootstrap": "^5.3.0",
        "devextreme": "^23.1.3",
        "emoji-mart": "^5.5.2",
        "flatpickr": "^4.6.13",
        "ink-mde": "^0.27.0",
        "lets-toast": "^1.0.1",
        "material-icons": "^1.13.8"
    },
    "devDependencies": {
        "@aurelia/router-lite": "2.0.0-beta.7",
        "@aurelia/runtime-html": "2.0.0-beta.7",
        "@aurelia/validation-html": "2.0.0-beta.7",
        "@aurelia/vite-plugin": "2.0.0-beta.7",
        "@types/node": "^20.4.2",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "autoprefixer": "^10.4.14",
        "css-loader": "^6.8.1",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-cypress": "^2.13.3",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-unused-imports": "^3.0.0",
        "htmlhint": "^1.1.4",
        "postcss": "^8.4.26",
        "postcss-loader": "^7.3.3",
        "rimraf": "^5.0.1",
        "sass": "^1.63.6",
        "sass-loader": "^13.3.2",
        "style-loader": "^3.3.3",
        "ts-loader": "^9.4.4",
        "tslib": "^2.6.0",
        "typescript": "^5.1.6",
        "vite": "4.4.4"
    },
    "jest": {
        "testMatch": [
            "<rootDir>/test/**/*.spec.ts"
        ],
        "testEnvironment": "jsdom",
        "transform": {
            "\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
            "\\.(ts|html)$": "@aurelia/ts-jest"
        },
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts"
        ],
        "globals": {
            "ts-jest": {
                "isolatedModules": true
            }
        }
    },
    "pnpm": {
        "overrides": {
            "semver@<7.5.2": ">=7.5.2"
        }
    }
}
