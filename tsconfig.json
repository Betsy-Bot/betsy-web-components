{
    "compileOnSave": true,
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "esnext",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "target": "es6",
        "lib": [
            "es2021.intl",
            "dom"
        ],
        "moduleResolution": "node",
        "baseUrl": "src",
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": [
        "src/**/*.*"
    ],
    "atom": {
        "rewriteTsconfig": false
    },
    "allowSyntheticDefaultImports": true
}
